# LiveKit Cloud credentials
# Get from https://cloud.livekit.io
NEXT_PUBLIC_LIVEKIT_URL=wss://your-app.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret
LIVEKIT_URL=wss://your-app.livekit.cloud

# Google AI API key for Gemini Live
# Get from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key

# Optional: ElevenLabs API key for custom TTS voice
ELEVENLABS_API_KEY=your-elevenlabs-key

# LiveAvatar credentials
# Get from https://app.liveavatar.com
LIVEAVATAR_API_KEY=your-liveavatar-api-key
LIVEAVATAR_AVATAR_ID=your-avatar-id

# Cloudflare R2 Storage for Recording (Optional)
# Required for LiveKit Egress recording feature
# Get from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=your-bucket-name
R2_ACCOUNT_ID=your-cloudflare-account-id
